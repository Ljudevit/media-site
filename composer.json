{
    "name": "netgen/media-site",
    "type": "project",
    "license": "(GPL-2.0-only or proprietary)",
    "description": "Netgen Media Site (Powered by Netgen Layouts & Ibexa Platform)",
    "homepage": "https://netgen.io",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://netgen.io"
        },
        {
            "name": "eZ dev team & eZ Community",
            "homepage": "https://github.com/ezsystems/ezplatform/contributors"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/flex": "^1.11.0",
        "sensio/framework-extra-bundle": "^5.6.1",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/expression-language": "*",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/http-client": "*",
        "symfony/intl": "*",
        "symfony/mailer": "*",
        "symfony/mime": "*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/notifier": "*",
        "symfony/process": "*",
        "symfony/security-bundle": "*",
        "symfony/string": "*",
        "symfony/translation": "*",
        "symfony/validator": "*",
        "symfony/web-link": "*",
        "symfony/yaml": "*",
        "ibexa/oss": "~3.3.0",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "doctrine/annotations": "^1.0",
        "phpdocumentor/reflection-docblock": "^5.2",
        "symfony/property-access": "5.2.*",
        "symfony/property-info": "5.2.*",
        "symfony/serializer": "5.2.*",
        "symfony/twig-bundle": "^5.2",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0",

        "php-http/httplug-bundle": "^1.20",
        "nyholm/psr7": "^1.3",
        "sentry/sentry-symfony": "^4.0",
        "novactive/ezseobundle": "^5.3",
        "twig/intl-extra": "^3.1",

        "netgen/media-site-data": "^2.1",
        "netgen/site-bundle": "^2.0",
        "netgen/site-installer-bundle": "^2.0",
        "netgen/ezplatform-site-api": "^4.3",
        "netgen/ezplatform-search-extra": "^2.5",
        "netgen/information-collection-bundle": "^2.0@alpha",

        "netgen/layouts-standard": "~1.2.0",
        "netgen/layouts-ezplatform": "~1.2.0",
        "netgen/layouts-ezplatform-site-api": "~1.2.0",
        "netgen/layouts-ezplatform-relation-list-query": "^1.2",
        "netgen/layouts-ezplatform-tags-query": "^1.2"
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.26.1",
        "symfony/debug-bundle": "^5.2",
        "symfony/stopwatch": "^5.2",
        "symfony/web-profiler-bundle": "^5.2",
        "symfony/var-dumper": "^5.2",
        "symfony/browser-kit": "^5.2",
        "symfony/css-selector": "^5.2",
        "symfony/phpunit-bridge": "^5.2",

        "deployer/recipes": "^6.2",

        "netgen/git-hooks": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "project-scripts": [
            "@php bin/console ngsite:symlink:project"
        ],
        "post-install-cmd": [
            "@auto-scripts",
            "@project-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "@project-scripts"
        ],
        "ezplatform-assets": [
            "@php bin/console bazinga:js-translation:dump public/assets --merge-domains",
            "yarn ezplatform"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.2.*",
            "endpoint": "https://flex.ibexa.co"
        },
        "branch-alias": {
            "dev-master": "2.2.x-dev"
        }
    }
}

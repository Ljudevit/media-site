{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import '@ibexadesign/parts/content_fields.html.twig' as content_fields %}

<article class="view-type view-type-{{ view_type }} ng-blog-post vl2">

    {{ content_fields.image(content, location) }}

    <header class="article-header">
        <h2 class="title"><a href="{{ ibexa_path(location) }}">{{ content_fields.title(content) }}</a></h2>
        <div class="info">
            {% include '@ibexadesign/parts/author.html.twig' %}
            {% include '@ibexadesign/parts/time.html.twig' %}
            {% include '@ibexadesign/parts/main_topic.html.twig' %}
        </div>
    </header>
</article>
